{
    "name": "jelrikvh/todo",
    "type": "project",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "infection/infection": "^0.21.0",
        "phpmd/phpmd": "^2.9",
        "phpstan/phpstan": "^0.12.74",
        "phpunit/phpunit": "^9.5",
        "slevomat/coding-standard": "^6.4",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "platform": {
            "php": "8.0"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Todo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Todo\\": [ "tests/" ]
        }
    }
}
